extends layout

block append content
  each product in products
    .row
      each subproduct in product
        .col-sm-6.col-md-4
          .thumbnail
            img(src= subproduct.imagePath )
            .caption
              h3= subproduct.title
              p(class = "description")= subproduct.description
              div.clearfix
                div(class = "price pull-left")= subproduct.price
                a.btn.btn-success.pull-right(href='#', role='button') Add to the shopping cart
  .row
  .col-md-4.col-md-offset-4
    h1 Sign Up
    form(action = "", methode = "post")
      .form-group
        label(for="email") E-Mail
        input(type="text" id="email" name="email").form-control
      .form-group
        label(for="password") Password
        input(type="password" id="password" name="password").form-control
      a.btn.btn-primary(href="#", role = 'button') Sign up