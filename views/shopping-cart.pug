extends layout

block content
  if products
    .row
      .col-sm-6.col-md-6.col-md-offset-3.col-sm-offset-3
        ul.list-group
          each product in products
            li.list-group-item
              span.badge= product.qty
              strong= product.item.title
              span.label.label-success $#{product.price}
              .btn-group
                i.btn.btn-primary.btn-xs.dropdown-toggle Action
                  span.caret
                  ul.dropdown-menu
                    li
                      a(href = "#") Reduce by 1
                    li
                      a(href = "#") Reduce All
    hr
    .row
      .col-sm-6.col-md-6.col-md-offset-3.col-sm-offset-3
        strong Total: #{totalPrice}
      .row
        .col-sm-6.col-md-6.col-md-offset-3.col-sm-offset-3
          i.btn.btn-success Checkout
  else
    .row
      .col-sm-6.col-md-6.col-md-offset-3.col-sm-offset-3
        h2 No Items in Cart


